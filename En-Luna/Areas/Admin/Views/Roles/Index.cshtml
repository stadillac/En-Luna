@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="row mt-4">
    <div class="col">
        <h2>Roles</h2>
        <hr />
    </div>
</div>
<div class="row mt-4">
    <div class="col">
        <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
    </div>
</div>
<div class="row mt-4">
    <div class="col">
        <h4>Current Roles</h4>
    </div>
</div>

<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>Name</th>
        @*<th>Users</th>*@
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            @*<td i-role="@role.Id"></td>*@ @*todo revisit this*@
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>