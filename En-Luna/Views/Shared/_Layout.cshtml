<body class="d-flex flex-column min-vh-100">
    <header id="header" class="header fixed-top" data-scrollto-offset="0">
        <div class="container-fluid d-flex align-items-center justify-content-between">

            <a href="index.html" class="logo d-flex align-items-center scrollto me-auto me-lg-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="~/img/logo.png" alt=""> -->
                <h1>En-Luna<span>.</span></h1>
            </a>
            <partial name="_NavMenu" />
            <a class="btn-getstarted scrollto" href="#about">Get Started</a>
        </div>
    </header>
    <main role="main" class="pb-3">
        <partial name="_ToastSuccess" />
        <partial name="_ToastFailure" />

        @{
            var isAdminPage = Context.Request.Path.ToString().Contains("Admin");
            var isIdentityPage = Context.Request.Path.ToString().Contains("Identity");
        }

        @if (isAdminPage || isIdentityPage)
        {
            <div class="container pt-5 mt-5">
                @RenderBody()
            </div>
        }
        else
        {
            @RenderBody()
        }
    </main>

    <partial name="_Footer" />
